<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ExtractedTextActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">
        <TextView
            android:id="@+id/extracted_text_extracted_activity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Extracted Text:"
            android:textSize="30dp"
            android:textColor="@color/black"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"/>

        <AutoCompleteTextView
            android:id="@+id/autocomplete_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/extracted_text_extracted_activity"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"
            android:textColor="@color/black"
            android:background="@drawable/autocomplete_textview_bg"
            android:editable="false"
            android:layout_centerHorizontal="true"
            android:padding="5dp"/>

        <Button
            android:id="@+id/edit_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edit"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_below="@+id/autocomplete_textview"
            android:layout_centerHorizontal="true"
            />

    </RelativeLayout>



</ScrollView>